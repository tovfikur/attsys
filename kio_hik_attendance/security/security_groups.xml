<!-- security/groups.xml -->
<odoo>
    <!-- Module Category -->
    <record id="category_hik_attendance" model="ir.module.category">
        <field name="name">Hik-Connect Attendance</field>
        <field name="description">Manage access to Hik-Connect device configurations and attendance logs.</field>
        <field name="sequence">10</field>
    </record>

    <!-- User: logs only (read-only) -->
    <record id="group_hik_user" model="res.groups">
        <field name="name">Hik-Connect User</field>
        <field name="category_id" ref="kio_hik_attendance.category_hik_attendance"/>
    </record>

    <!-- Manager: full control; implies user -->
    <record id="group_hik_manager" model="res.groups">
        <field name="name">Hik-Connect Manager</field>
        <field name="implied_ids" eval="[(4, ref('kio_hik_attendance.group_hik_user'))]"/>
        <field name="category_id" ref="kio_hik_attendance.category_hik_attendance"/>
    </record>
</odoo>
