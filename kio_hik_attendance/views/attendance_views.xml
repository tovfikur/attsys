<odoo>
    <record id="view_hik_log_tree" model="ir.ui.view">
        <field name="name">hik.attendance.log.tree</field>
        <field name="model">hik.attendance.log</field>
        <field name="arch" type="xml">
            <list>
                <field name="record_time"/>
                <field name="first_name"/>
                <field name="last_name"/>
                <field name="person_code"/>
                <field name="device_id"/>
            </list>
        </field>
    </record>

    <record id="view_hik_log_search" model="ir.ui.view">
        <field name="name">hik.attendance.log.search</field>
        <field name="model">hik.attendance.log</field>
        <field name="arch" type="xml">
            <search string="Attendance Logs">
                <field name="person_code"/>
                <field name="first_name"/>
                <field name="last_name"/>
                <field name="device_id"/>

                <filter string="Today"
                    name="today"
                    domain="[('record_time', '&gt;=', context_today()),
                            ('record_time', '&lt;', context_today() + relativedelta(days=1))]"/>

                <group expand="1" string="Group By">
                    <filter string="Device" name="group_device" context="{'group_by': 'device_id'}"/>
                    <filter string="Date"   name="group_date" context="{'group_by': 'record_time:day'}"/>
                    <filter string="Person" name="group_person" context="{'group_by': 'person_code'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_hik_log_list" model="ir.actions.act_window">
        <field name="name">Attendance Logs</field>
        <field name="res_model">hik.attendance.log</field>
        <field name="view_mode">list</field>
    </record>

    <menuitem id="menu_hik_logs" name="Attendance Logs" parent="menu_hik_root" action="action_hik_log_list" groups="kio_hik_attendance.group_hik_user,kio_hik_attendance.group_hik_manager"/>

</odoo>
