<odoo>
    <record id="view_hik_device_tree" model="ir.ui.view">
        <field name="name">hik.device.tree</field>
        <field name="model">hik.device</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_hik_device_form" model="ir.ui.view">
        <field name="name">hik.device.form</field>
        <field name="model">hik.device</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_test_connection" type="object" string="Test Connection" class="btn-primary"/>
                    <button name="action_download_all_logs" type="object" string="Download All Logs" class="btn-success"/>
                    <button name="action_last_two_days_logs_download" string="Last 2 Days Logs" type="object" class="btn-primary"/>

                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="app_key"/>
                        <field name="secret_key" password="True"/>
                        <field name="active"/>
                    </group>
                    <group string="Token Info">
                        <field name="token" readonly="1"/>
                        <field name="area_domain" readonly="1"/>
                        <field name="token_expire_time" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_hik_device_list" model="ir.actions.act_window">
        <field name="name">Devices</field>
        <field name="res_model">hik.device</field>
        <field name="view_mode">list,form</field>
    </record>
    
    <menuitem id="menu_hik_devices" 
        name="Devices" 
        parent="menu_hik_root" 
        action="action_hik_device_list" groups="kio_hik_attendance.group_hik_manager"/>

</odoo>
